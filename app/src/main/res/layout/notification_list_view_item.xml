<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/material_baseline_grid_8x">

<android.support.v7.widget.CardView
    android:id="@+id/notificationCardView"
    android:layout_width="match_parent"
    android:layout_height="@dimen/material_baseline_grid_8x"
    android:transitionName="notification"
    app:cardUseCompatPadding="true"
    app:cardPreventCornerOverlap="true"
    app:cardElevation="@dimen/cardview_default_elevation"
    app:cardCornerRadius="4dp">

    <RelativeLayout
        android:padding="@dimen/material_card_edge_margin"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:layout_marginLeft="@dimen/material_content_edge_margin_horizontal"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            tools:src="@color/material_color_grey_800"
            android:layout_width="@dimen/material_baseline_grid_5x"/>

        <TextView
            android:id="@+id/notificationMessageTextView"
            android:layout_marginLeft="@dimen/material_content_secondary_edge_margin_start"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:lineSpacingMultiplier="0.8"
            android:textColor="#000000"
            android:textSize="12sp"
            android:maxLines="2"
            android:ellipsize="end"
            tools:text="Let's play tonight \n don't forget to bring a ball" />

        <TextView
            android:id="@+id/notificationDateTextView"
            android:layout_marginLeft="@dimen/material_content_secondary_edge_margin_start"
            android:text="Just now"
            android:textSize="9sp"
            android:layout_alignParentBottom="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </RelativeLayout>
</android.support.v7.widget.CardView>
</FrameLayout>