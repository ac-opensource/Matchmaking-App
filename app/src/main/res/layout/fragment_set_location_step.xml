<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/sportsRecyclerView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="com.youniversals.playupgo.newmatch.SetLocationStepFragment">

    <Button
        android:id="@+id/setLocationButton"
        android:text="Set play location"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/material_baseline_grid_6x"/>

    <ImageView
        android:id="@+id/staticMap"
        android:layout_marginTop="@dimen/material_baseline_grid_1x"
        android:layout_width="match_parent"
        android:layout_height="@dimen/material_increment_4x"/>

</LinearLayout>