<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="wrap_content"
    android:layout_width="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.v7.widget.CardView
        android:id="@+id/sportCardView"
        android:layout_width="100dp"
        android:layout_height="110dp"
        android:transitionName="match"
        app:cardUseCompatPadding="true"
        app:cardPreventCornerOverlap="true"
        app:cardElevation="@dimen/cardview_default_elevation"
        app:cardCornerRadius="4dp">

        <ImageView
            android:scaleType="fitXY"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <RelativeLayout
            android:padding="@dimen/material_card_edge_margin"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/sportIconImageView"
                android:layout_centerInParent="true"
                tools:src="@drawable/ic_sport_basketball"
                android:layout_width="@dimen/material_bottom_sheet_grid_item_icon_size"
                android:layout_height="@dimen/material_bottom_sheet_grid_item_icon_size" />

            <TextView
                android:id="@+id/sportNameTextView"
                tools:text="Basketball"
                android:textSize="9sp"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>

</FrameLayout>